---
import { Image } from 'astro:assets';
import logoImage from '../images/campo-azul-logo.png';

interface Store {
  name: string;
  value: string;
}

const stores: Store[] = [
  { name: 'Oxxo', value: 'oxxo' },
  { name: '7-Eleven', value: '7eleven' },
  { name: 'Walmart', value: 'walmart' },
  { name: 'Soriana', value: 'soriana' },
  { name: 'Consuvino', value: 'consuvino' },
  { name: 'Otra', value: 'otra' }
];
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encuesta Campo Azul</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <div class="max-w-2xl mx-auto p-4 bg-white text-gray-800">
        <div class="flex justify-center mb-6">
            <Image
                src={logoImage}
                alt="Logo Campo Azul"
                width={200}
                height={100}
                class="mb-4"
            />
        </div>
        <form id="surveyForm" class="space-y-6 bg-gray-100 p-6 rounded-lg shadow">
            <div>
                <label class="block font-semibold mb-2">1. ¿Conoces la marca Campo Azul?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="conoce" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="conoce" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
            </div>

            <div>
                <label class="block font-semibold mb-2">2. Después de probar Mix Campo Azul, ¿Te gustó su sabor?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="gusto" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="gusto" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
            </div>

            <div>
                <label class="block font-semibold mb-2">3. ¿Te gusta la imagen de Mix Campo Azul?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="imagen" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="imagen" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
            </div>

            <div>
                <label class="block font-semibold mb-2">4. Si hubiera producto a la venta ¿lo comprarías en este momento?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="compra" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="compra" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
            </div>

            <div>
                <label for="precio" class="block font-semibold mb-2">5. ¿Cuál es el precio que estás dispuesto a pagar por él? (en pesos)</label>
                <input 
                    type="text" 
                    id="precio" 
                    name="precio" 
                    class="w-full px-3 py-2 border rounded-md" 
                    placeholder="$0.00" 
                    required 
                />
            </div>

            <div>
                <label for="sabor" class="block font-semibold mb-2">6. ¿Qué sabor te agradó más?</label>
                <select 
                    id="sabor" 
                    name="sabor" 
                    class="w-full px-3 py-2 border rounded-md"
                    required
                >
                    <option value="">Selecciona un sabor</option>
                    <option value="mineral">Mineral</option>
                    <option value="frutos-rojos">Frutos Rojos</option>
                    <option value="paloma">Paloma</option>
                    <option value="spicy-pina">Spicy Piña</option>
                </select>
            </div>

            <div>
                <label class="block font-semibold mb-2">7. ¿Qué tiendas frecuentas más? (Selecciona todas las que apliquen)</label>
                <div class="space-y-2">
                    {stores.map((store) => (
                        <div 
                            class="flex items-center p-2 border rounded-md cursor-pointer transition-colors duration-200 hover:bg-gray-200"
                            data-store={store.value}
                        >
                            <input 
                                type="checkbox" 
                                id={`tienda-${store.value}`}
                                name="tiendas" 
                                value={store.value} 
                                class="sr-only" 
                            />
                            <div class="w-5 h-5 border-2 rounded mr-2 flex items-center justify-center bg-white">
                                <svg class="w-3 h-3 text-blue-500 fill-current hidden" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z" />
                                </svg>
                            </div>
                            <label for={`tienda-${store.value}`} class="flex-grow cursor-pointer">
                                {store.name}
                            </label>
                        </div>
                    ))}
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">
                Enviar encuesta
            </button>
        </form>
    </div>

    <script>
        const priceInput = document.getElementById('precio') as HTMLInputElement;
        const storeCheckboxes = document.querySelectorAll<HTMLElement>('[data-store]');
        const form = document.getElementById('surveyForm') as HTMLFormElement;

        function formatPrice(price: string): string {
            const numericPrice = parseFloat(price.replace(/[^0-9.]/g, ''));
            return isNaN(numericPrice) ? '$0.00' : `$${numericPrice.toFixed(2)}`;
        }

        priceInput?.addEventListener('blur', (e) => {
            const target = e.target as HTMLInputElement;
            target.value = formatPrice(target.value);
        });

        priceInput?.addEventListener('input', (e) => {
            const target = e.target as HTMLInputElement;
            target.value = target.value.replace(/[^0-9.]/g, '');
        });

        storeCheckboxes.forEach(checkbox => {
            const input = checkbox.querySelector('input[type="checkbox"]') as HTMLInputElement;
            const checkIcon = checkbox.querySelector('svg');

            function updateCheckboxStyle() {
                if (input && checkIcon) {
                    checkbox.classList.toggle('bg-blue-100', input.checked);
                    checkbox.classList.toggle('border-blue-500', input.checked);
                    checkIcon.classList.toggle('hidden', !input.checked);
                }
            }

            checkbox.addEventListener('click', (e) => {
                if (e.target !== input && input) {
                    e.preventDefault();
                    input.checked = !input.checked;
                }
                updateCheckboxStyle();
            });

            input?.addEventListener('change', updateCheckboxStyle);

            // Initialize the style
            updateCheckboxStyle();
        });

        form?.addEventListener('submit', (e) => {
            e.preventDefault();
            console.log('Formulario enviado');
            
            const formData = new FormData(form);
            const selectedStores = Array.from(formData.getAll('tiendas'));
            
            console.log('Precio:', formData.get('precio'));
            console.log('Tiendas seleccionadas:', selectedStores);
        });
    </script>
</body>
</html>