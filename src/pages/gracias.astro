---
import { Image } from 'astro:assets';
import logoImage from '../images/campo-azul-logo.png';
import ProgressBar from '../components/ProgressBar.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gracias - Encuesta Campo Azul</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .gradient-progress {
            background: linear-gradient(to right, #35a6df, #ed6b28, #48ae4d, #d31153);
            background-size: 300% 100%;
            animation: gradient 15s ease infinite;
        }
        @keyframes gradient {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }
    </style>
</head>
<body class="bg-white min-h-screen flex flex-col items-center justify-start pt-8">
    <div class="w-full h-4 fixed top-0 left-0 z-50">
        <div class="gradient-progress h-4 transition-all duration-1000 ease-out" style="width: 100%;"></div>
    </div>
    
    <div class="max-w-2xl mx-auto p-4 bg-white text-gray-800 text-center">
        <div class="flex justify-center mb-6">
            <Image
                src={logoImage}
                alt="Logo Campo Azul"
                width={200}
                height={100}
                class="mb-4"
            />
        </div>
        <h1 class="text-3xl font-bold mb-4">¡Gracias por completar la encuesta!</h1>
        <p class="text-xl mb-8">Tu opinión es muy importante para nosotros.</p>
        <a href="/" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">
            Volver al inicio
        </a>
    </div>

    <script>
        // Establecer el progreso al 100% en la página de agradecimiento
        document.addEventListener('DOMContentLoaded', () => {
            localStorage.setItem('surveyProgress', '100');
        });
    </script>
</body>
</html>