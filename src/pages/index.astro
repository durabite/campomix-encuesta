---
import { Image } from 'astro:assets';
import logoImage from '../images/campo-azul-logo.png';
import latasImage from '../images/bg-latas.jpg';
import ProgressBar from '../components/ProgressBar.astro';
---

<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Encuesta Campo Azul</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      background-image: url('/images/bg-latas.jpg');
      background-size: 50% auto;
      background-position: bottom center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: 100vh;
    }
    .gradient-progress {
      background: linear-gradient(to right, #35a6df, #ed6b28, #48ae4d, #d31153);
      background-size: 300% 100%;
      animation: gradient 15s ease infinite;
    }
    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
    .content-wrapper {
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 1rem;
      padding: 2rem;
      margin-top: 10vh;
    }@media (max-width: 768px) {
      body {
        background-image: url('/images/bg-latas.jpg');
        background-size: 100% auto;
        background-position: 50% 70%;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }
    }
  </style>
</head>
<body class="flex flex-col items-center">
  <div class="w-full h-4 fixed top-0 left-0 z-50">
    <div class="gradient-progress h-4 transition-all duration-1000 ease-out" style="width: 0%;"></div>
  </div>
  
  <div class="max-w-2xl mx-auto p-4 content-wrapper">
    <div class="flex justify-center mb-6">
      <Image
        src={logoImage}
        alt="Logo Campo Azul"
        width={200}
        height={100}
        class="w-48"
      />
    </div>
    <div class="text-center">
      <p class="text-lg">
        Participa en esta breve encuesta
      </p>
      <p class="text-sm text-gray-500">
        ¡menos de 1 minuto!
      </p>
    </div>
    <div class="flex justify-center mt-8">
      <a
        href="/pregunta01"
        class="px-8 py-3 bg-blue-500 text-white text-lg font-semibold rounded-2xl hover:bg-blue-600 transition-colors duration-300 shadow-md"
      >
        INICIAR
      </a>
    </div>
  </div>

  <script>
    // Resetear el progreso al inicio de la encuesta
    localStorage.setItem('surveyProgress', '0');

    // Establecer el ancho de la barra de progreso a 0% en la página de inicio
    document.addEventListener('DOMContentLoaded', () => {
      const progressBar = document.querySelector('.gradient-progress') as HTMLElement;
      if (progressBar) {
        progressBar.style.width = '0%';
      }
    });
  </script>
</body>
</html>