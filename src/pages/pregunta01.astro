---
import { Image } from 'astro:assets';
import logoImage from '../images/campo-azul-logo.png';
import bgImage from '../images/bg-campomix-mineral.png';
import WarningMessage from '../components/WarningMessage.astro';
import ProgressBar from '../components/ProgressBar.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encuesta Campo Azul - Preguntas 1 y 2</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preload" as="image" href="/images/bg-campomix-mineral.png">
    <style>
        body {
            background-image: url('/images/bg-mineral.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .warning-tooltip {
            display: none;
            margin-top: 0.5rem;
        }
        .content-wrapper {
            background-color: rgba(255, 255, 255, 0.4);
            border-radius: 1rem;
            padding: 2rem;
            border: 2px solid #35a6df;
        }
        .progress-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-start pt-8">
    <div class="progress-container">
        <ProgressBar progress={0} color="#35a6df" />
    </div>
    
    <div class="max-w-2xl mx-auto p-4 content-wrapper mt-16 animate__animated animate__bounceInDown">
        <div class="flex justify-center mb-6">
            <Image
                src={logoImage}
                alt="Logo Campo Azul"
                width={200}
                height={100}
                class="mb-4"
            />
        </div>
        <form id="surveyForm" class="space-y-6 bg-white p-6 rounded-lg shadow">
            <div class="space-y-2">
                <label class="block font-semibold">1. ¿Conoces la marca Campo Azul?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="conoce_marca" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="conoce_marca" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
                <div class="warning-tooltip">
                    <WarningMessage message="Selecciona una de estas opciones" />
                </div>
            </div>

            <div class="space-y-2">
                <label class="block font-semibold">2. ¿Has probado algún producto de Campo Azul?</label>
                <div class="space-x-4">
                    <label class="inline-flex items-center">
                        <input type="radio" name="ha_probado" value="si" class="form-radio" required />
                        <span class="ml-2">Sí</span>
                    </label>
                    <label class="inline-flex items-center">
                        <input type="radio" name="ha_probado" value="no" class="form-radio" />
                        <span class="ml-2">No</span>
                    </label>
                </div>
                <div class="warning-tooltip">
                    <WarningMessage message="Selecciona una de estas opciones" />
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">
                Siguiente
            </button>
        </form>
    </div>

    <script>
    const form = document.getElementById('surveyForm') as HTMLFormElement;
    const inputs = form?.querySelectorAll('input');
    const warningTooltips = document.querySelectorAll('.warning-tooltip');

    function validateField(field: HTMLInputElement) {
      const warningTooltip = field.closest('.space-y-2')?.querySelector('.warning-tooltip') as HTMLElement | null;
      if (!warningTooltip) return true;

      const isValid = !!form?.querySelector(`input[name="${field.name}"]:checked`);
      warningTooltip.style.display = isValid ? 'none' : 'block';
      return isValid;
    }

    inputs?.forEach(input => {
      input.addEventListener('change', () => {
        validateField(input as HTMLInputElement);
      });
    });

    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      let isValid = true;

      inputs?.forEach(input => {
        if (!validateField(input as HTMLInputElement)) {
          isValid = false;
        }
      });

      if (isValid) {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        localStorage.setItem('pregunta01', JSON.stringify(data));
        window.location.href = '/pregunta02';
      }
    });

    function updateProgress(progress: number) {
      localStorage.setItem('surveyProgress', progress.toString());
      const progressBar = document.querySelector('.progress-container .progress-bar') as HTMLElement | null;
      if (progressBar) {
        progressBar.style.width = `${progress}%`;
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      const currentProgress = parseInt(localStorage.getItem('surveyProgress') || '0', 10);
      updateProgress(20);
    });
    </script>
</body>
</html>