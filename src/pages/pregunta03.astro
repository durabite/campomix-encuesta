---
import { Image } from 'astro:assets';
import logoImage from '../images/campo-azul-logo.png';
import bgImage from '../images/bg-campomix-frutos-rojos.png';
import WarningMessage from '../components/WarningMessage.astro';
import ProgressBar from '../components/ProgressBar.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Encuesta Campo Azul - Preguntas 5 y 6</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preload" as="image" href="/images/bg-campomix-paloma.png">
    <style>
        body {
            background-image: url('/images/bg-campomix-paloma.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .warning-tooltip {
            display: none;
            margin-top: 0.5rem;
        }
        .content-wrapper {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 1rem;
            padding: 2rem;
        }
        .progress-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col items-center justify-start pt-8">
    <div class="progress-container">
        <ProgressBar progress={40} color="#48ae4d" />
    </div>
    
    <div class="max-w-2xl mx-auto p-4 content-wrapper mt-16">
        <div class="flex justify-center mb-6">
            <Image
                src={logoImage}
                alt="Logo Campo Azul"
                width={200}
                height={100}
                class="mb-4"
            />
        </div>
        <form id="surveyForm" class="space-y-6 bg-white p-6 rounded-lg shadow">
            <div class="space-y-2">
                <label for="precio" class="block font-semibold">5. ¿Cuál es el precio que estás dispuesto a pagar por él? (en pesos)</label>
                <input 
                    type="text" 
                    id="precio" 
                    name="precio" 
                    class="w-full px-3 py-2 border rounded-md" 
                    placeholder="$0.00" 
                    required 
                />
                <div class="warning-tooltip">
                    <WarningMessage message="Por favor, ingresa un precio válido" />
                </div>
            </div>

            <div class="space-y-2">
                <label for="sabor" class="block font-semibold">6. ¿Qué sabor te agradó más?</label>
                <select 
                    id="sabor" 
                    name="sabor" 
                    class="w-full px-3 py-2 border rounded-md"
                    required
                >
                    <option value="">Selecciona un sabor</option>
                    <option value="mineral">Mineral</option>
                    <option value="frutos-rojos">Frutos Rojos</option>
                    <option value="paloma">Paloma</option>
                    <option value="spicy-pina">Spicy Piña</option>
                </select>
                <div class="warning-tooltip">
                    <WarningMessage message="Por favor, selecciona un sabor" />
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">
                Siguiente
            </button>
        </form>
    </div>

    <script>
        const form = document.getElementById('surveyForm') as HTMLFormElement;
        const priceInput = document.getElementById('precio') as HTMLInputElement;
        const saborSelect = document.getElementById('sabor') as HTMLSelectElement;

        function animateProgress(start: number, end: number, duration: number) {
            const startTime = performance.now();
            const updateProgress = (window as any).updateProgress;
            
            if (typeof updateProgress !== 'function') {
                console.error('updateProgress function not found');
                return;
            }

            function step(currentTime: number) {
                const elapsedTime = currentTime - startTime;
                if (elapsedTime < duration) {
                    const progress = start + (end - start) * (elapsedTime / duration);
                    updateProgress(progress);
                    requestAnimationFrame(step);
                } else {
                    updateProgress(end);
                }
            }
            
            requestAnimationFrame(step);
        }

        function formatPrice(price: string): string {
            const numericPrice = parseFloat(price.replace(/[^0-9.]/g, ''));
            return isNaN(numericPrice) ? '$0.00' : `$${numericPrice.toFixed(2)}`;
        }

        if (priceInput) {
            priceInput.addEventListener('blur', (e) => {
                const target = e.target as HTMLInputElement;
                target.value = formatPrice(target.value);
            });

            priceInput.addEventListener('input', (e) => {
                const target = e.target as HTMLInputElement;
                target.value = target.value.replace(/[^0-9.]/g, '');
            });
        }

        function validateField(field: HTMLInputElement | HTMLSelectElement): boolean {
            const warningTooltip = field.nextElementSibling as HTMLElement | null;
            if (!warningTooltip) return true;

            const isValid = field.value !== '';
            warningTooltip.style.display = isValid ? 'none' : 'block';
            return isValid;
        }

        [priceInput, saborSelect].forEach(input => {
            if (input) {
                input.addEventListener('change', () => {
                    validateField(input);
                });
            }
        });

        if (form) {
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                let isValid = true;

                [priceInput, saborSelect].forEach(input => {
                    if (input && !validateField(input)) {
                        isValid = false;
                    }
                });

                if (isValid) {
                    const formData = new FormData(form);
                    for (let [key, value] of formData.entries()) {
                        localStorage.setItem(key, value.toString());
                    }
                    localStorage.setItem('surveyProgress', '60');
                    window.location.href = '/pregunta04';
                }
            });
        }

        // Establecer el progreso al cargar la página
        document.addEventListener('DOMContentLoaded', () => {
            const currentProgress = parseInt(localStorage.getItem('surveyProgress') || '40', 10);
            
            // Animar la barra de progreso
            animateProgress(currentProgress, 60, 1000);
        });
    </script>
</body>
</html>